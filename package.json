{
  "name": "speaker",
  "displayName": "Speaker",
  "description": "This extension reads aloud all the comments in your source code so you can focus on the other important things ðŸ˜‰",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/arizworld/vscode-read-comments"
  },
  "icon": "./public/logo.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "codeLensProviders": [
    {
      "language": "*",
      "provider": "src/CodelensProvider"
    }
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Speaker Configuration",
      "properties": {
        "speaker.enableCodeLens": {
          "title": "Speaker: Enable CodeLens",
          "type": "boolean",
          "default": true,
          "description": "Whether the code lens is to be enabled."
        },
        "speaker.voice": {
          "title": "Speaker: Choose Voice",
          "type": "string",
          "default": "",
          "description": "Please refer to the voice section of the readme for more details."
        },
        "speaker.speed": {
          "title": "Speaker: Choose Speed",
          "type": "number",
          "default": 1,
          "description": "Adjust the voice speed."
        }
      }
    },
    "commands": [
      {
        "command": "speaker.enableCodeLens",
        "title": "Speaker: Enable Code Lens"
      },
      {
        "command": "speaker.disableCodeLens",
        "title": "Speaker: Disable Code Lens"
      },
      {
        "command": "speaker.read",
        "title": "Speaker: Read All Comments"
      },
      {
        "command": "speaker.pause",
        "title": "Speaker: Pause Reading"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/espree": "^10.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "espree": "^10.0.1",
    "say": "^0.16.0",
    "tsutils": "^3.21.0"
  }
}